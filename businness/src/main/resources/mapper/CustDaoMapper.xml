<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.businness.mapper.CustDaoMapper">
    <select id="chachongname" resultType="int">
        select id from customerinfo where custname=#{custname}
    </select>

    <select id="chaChongCount" resultType="int">
        select count(1) from customerinfo where custname=#{custname}
    </select>
    <insert id="insertOne" parameterType="com.businness.entity.CustEX" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert customerinfo(`cid`,`custname`,`custphone`,`custidcard`,`custaddress`,`custarea`,`custcreatertime`)
        value (#{cid},#{custname},#{custphone},#{custidcard},#{custaddress},#{custarea},#{custcreatertime})
    </insert>

    <select id="chacount" resultType="int">
        select count(1) from customerinfo
    </select>
</mapper>  